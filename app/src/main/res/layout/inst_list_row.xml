<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/instImg"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/instPrice"
        android:layout_toStartOf="@+id/instPrice" />

    <TextView
        android:id="@+id/instId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:text="id"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/instBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instType"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/instType"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/instImg"
        android:layout_toStartOf="@+id/instImg"
        android:text="brand" />

    <TextView
        android:id="@+id/instModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instType"
        android:layout_alignStart="@+id/instType"
        android:layout_below="@+id/instType"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/instImg"
        android:layout_toStartOf="@+id/instImg"
        android:text="model" />

    <TextView
        android:id="@+id/instType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instBrand"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/instId"
        android:layout_toLeftOf="@+id/instImg"
        android:layout_toRightOf="@+id/instId"
        android:text="type" />

    <TextView
        android:id="@+id/instPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:text="price" />

    <TextView
        android:id="@+id/instQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instModel"
        android:layout_alignStart="@+id/instModel"
        android:layout_below="@+id/instModel"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/instImg"
        android:layout_toStartOf="@+id/instImg"
        android:text="quantity" />

</RelativeLayout>