<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="New Text" />

    <TextView
        android:id="@+id/shopAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopName"
        android:layout_centerHorizontal="true"
        android:text="New Text" />

    <TextView
        android:id="@+id/shopPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopAddress"
        android:layout_centerHorizontal="true"
        android:autoLink="phone"
        android:text="New Text" />

    <TextView
        android:id="@+id/shopWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopPhone"
        android:layout_centerHorizontal="true"
        android:autoLink="web"
        android:text="New Text" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayoutInst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shopWebsite">
    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopWebsite"
        android:layout_centerHorizontal="true" />
    </android.support.v4.widget.SwipeRefreshLayout>


    <Button
        android:id="@+id/sendEmailBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shopWebsite"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Send Email" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>